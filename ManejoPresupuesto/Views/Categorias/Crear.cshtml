@model Categoria
@{
    ViewData["Title"] = "Crear Categoria";
}

<h1>Crear Categoria</h1>
<h5>La categoria nos permite indicar en que gastamos nuestro dinero, tambien, de donde provienen nuestros ingresos.</h5>

<form asp-action="Crear">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="TipoOperacionId" class="form-label"></label>@* //tipo del campo es tipooperacionId, nombre del enum es tipoOperacion*@
        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()"
         class="form-select"    
        ></select> @*//EN EL SELECT COLOCAREMOS UN TIPO ENUM PARA ESTO SE DEFINE ASI CREAR ITEMS A PARTIR DE ENUM*@
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial">
    }
